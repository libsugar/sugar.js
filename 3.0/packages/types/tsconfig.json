{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES2022",
        "outDir": "./dev",
        "strict": true,
        "declaration": true,
        "declarationDir": "type",
        "importHelpers": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["./src/**/*.ts"]
}
